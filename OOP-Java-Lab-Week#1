package factorial;

/**
 *
 * @author ZBOOK
 */
public class Factorial {

    
    public static void main(String[] args) {
       int num=10;
       int factorial=1;
       int i=1;
       factorial*=i;
       while(i<=num){
       factorial*=i;
       i++;
       }
       System.out.println("Factorial of " + num+ " is "+factorial);
    }
    
}
OUTPUT:

