package stringarray;


public class Stringarray {

    
    public static void main(String[] args) {
        String[]arr={"PF","OOP","DLD","ICT"};
        for(int i=0;i<arr.length;i++)
        {
            System.out.println(arr[i]);
        }
    }
    
}





OUTPUT:










